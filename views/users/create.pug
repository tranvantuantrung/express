extends ../layouts/common.pug

block content
    .container.pt-5
        h1 Create
        .w-50
            if errors
                each error in errors 
                    .alert.alert-danger= error                   

            form(action="/users/create" method="POST")
                .form-group
                    label Name: 
                    input.form-control(type="text" name="name" value=values ? values.name : '')
                .form-group
                    label Phone: 
                    input.form-control(type="text" name="phone" value=values ? values.phone : '')
                .form-group
                    label Email: 
                    input.form-control(type="text" name="email" value=values ? values.email : '')
                .form-group
                    label Password: 
                    input.form-control(type="password" name="password" value=values ? values.password : '')
                button.btn.btn-success Create