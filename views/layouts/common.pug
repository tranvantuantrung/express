<!DOCTYPE html>
  html
    head
      link(rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css")
      link(rel="stylesheet", href="/style/custom.css")
    body
      nav.navbar.navbar-expand-lg.navbar-light.bg-light
        .container
          a.navbar-brand.codersCharacter(href='/') Coders
              span.xCharacter X
          button.btn-navbar.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarRes')
            span.navbar-toggler-icon
          #navbarRes.collapse.navbar-collapse
            ul.navbar-nav.mx-auto.text-center
              li.navbar-item.mx-5
                a.nav-link(href="/") Home
              li.navbar-item.mx-5
                a.nav-link(href="/users") Users list  
              li.navbar-item.mx-5
                a.nav-link(href="/users/create") Create
              li.navbar-item.mx-5
                a.nav-link(href="/products") Products
            .userLogin.d-flex.align-items-center.justify-content-end
              if (user)
                if (user.avatar)
                  img.rounded(src= user.avatar width="40" height="40")
                else
                  img.rounded(src="/images/avatar.png" width="40" height="40")
              else 
                a.btn.btn-primary(href="/auth/login") Login
              .text-info.text-center.mx-2= user ? user.name : ''

      block content

